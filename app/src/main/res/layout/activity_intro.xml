<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.binnaapplicationn.intro"
    android:id="@+id/main_layout">

    <ImageView
        android:id="@+id/binna_image"
        android:layout_width="408dp"
        android:layout_height="371dp"
        android:background="#00000000"
        android:contentDescription="@string/logo_image"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/main_layout"
        app:layout_constraintTop_toTopOf="@id/main_layout"
        app:srcCompat="@drawable/two_colors_logo" />

    <TextView
        android:id="@+id/enjoy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enjoy_your_time_text"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="22dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintEnd_toEndOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="@id/welcome_text" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_binna_text_view"
        android:textColor="@color/grey"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/binna_image" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/constraint_layout_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="32dp"
        android:layout_marginTop="236dp"
        android:text="@string/login_text"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/bright_orange"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/enjoy_text"
        tools:layout_editor_absoluteX="32dp">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/constraint_layout_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/signup_text_nav"
        android:textColor="@color/bright_orange"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout_login">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>